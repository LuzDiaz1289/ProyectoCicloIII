<div class="jumbotron">
    <h2>Actores</h2>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var actor in Actors)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="card">
                                <img src="@actor.Photo" class="card-img-top" alt="..." height="270px" width="200px">
                                <div class="card-body">
                                    <h5 class="card-title">@actor.ActorName</h5>
                                    <p class="card-text">@actor.Nationality</p>
                                    <p class="card-text">@actor.Gender</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@actor.BirthDate</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code {
    [Parameter] public List<Actor> Actors {get; set;}
}